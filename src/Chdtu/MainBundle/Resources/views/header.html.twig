{% for flashMessage in app.session.flashbag.get('notice') %}
    <div class="flash-message">
        <em>Notice</em>: {{ flashMessage }}
    </div>
{% endfor %}

{% block content_header %}
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <a class="navbar-brand" href="{{ path('_chdtu_main') }}">Home</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="{{ path('_user_list') }}">Користувачі<span class="sr-only">(current)</span></a></li>
                    <li><a href="{{ path('group') }}">Групи</a></li>
                    <li><a href="{{ path('subject') }}">Предмети</a></li>

                </ul>
                <ul class="nav navbar-right">
                    {% if is_granted("ROLE_USER") %}
                        <li>
                            <span>{{ 'chdtu.logged.as'|trans }}</span>
                            <span> {{ app.user.username }}</span>
                        </li>
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">Вийти</a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('fos_user_security_login') }}">Логін</a>
                        </li>

                    {% endif %}
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div style="clear: both"></div>
{% endblock %}
