<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd"
        >

    <services>

        <service id="chdtu.form.type.user.edit" class="Chdtu\UserBundle\Form\Type\EditUserType">
            <tag name="form.type"/>
        </service>

        <service id="chdtu.form.type.group.edit" class="Chdtu\UserBundle\Form\Type\EditGroupType">
            <tag name="form.type"/>
        </service>

        <service id="chdtu_user.registration.form.type" class="Chdtu\UserBundle\Form\Type\RegistrationFormType">
            <tag name="form.type" alias="chdtu_user_registration"/>
        </service>
    </services>
</container>
